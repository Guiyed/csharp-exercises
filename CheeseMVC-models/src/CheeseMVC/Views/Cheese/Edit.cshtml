<h1>Edit Cheese @ViewBag.cheese.Name (id=@ViewBag.cheese.CheeseId)</h1>
<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" value ="@ViewBag.cheese.Name" name="name" id="name" type="text" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" value="@ViewBag.cheese.Description" name="description" id="description" type="text" />
    </div>
    <input type="hidden" value="@ViewBag.cheese.CheeseId" name="id" />
    <input type="submit" value="Add Cheese" />
</form>
